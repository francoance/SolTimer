<Window x:Class="SolTimer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:SolTimer"
    xmlns:Extensions="clr-namespace:SolTimer"
    mc:Ignorable="d"
    Title="Sol Timer" Height="750" Width="600"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    ResizeMode="CanResize"
    AllowsTransparency="True"
    Background="Transparent"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontWeight="Regular"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Closing="Window_Closing">

    <Window.Resources>
        <VisualBrush x:Key="BackgroundPattern" TileMode="Tile" Viewport="0,0,200,200"
            ViewportUnits="Absolute">
            <VisualBrush.Visual>
                <Grid Width="200" Height="200">
                    <!-- Large flower -->
                    <materialDesign:PackIcon Kind="Flower"
                        Width="80"
                        Height="80"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Opacity="0.03"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="20,20,0,0" />

                    <!-- Medium flower -->
                    <materialDesign:PackIcon Kind="Bee"
                        Width="40"
                        Height="40"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Opacity="0.02"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,40,30,0" />

                    <!-- Small flower -->
                    <materialDesign:PackIcon Kind="FlowerTulip"
                        Width="25"
                        Height="25"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Opacity="0.015"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="40,0,0,30"/>

                    <!-- Tiny flower -->
                    <materialDesign:PackIcon Kind="Flower"
                        Width="15"
                        Height="15"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Opacity="0.01"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,50,50"/>
                </Grid>
            </VisualBrush.Visual>
        </VisualBrush>

        <Style x:Key="SmoothScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                     Grid.Column="1"
                                     Value="{TemplateBinding VerticalOffset}"
                                     Maximum="{TemplateBinding ScrollableHeight}"
                                     ViewportSize="{TemplateBinding ViewportHeight}"
                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <materialDesign:DialogHost DialogTheme="Inherit"
                             Identifier="MainWindowDialog">
        <materialDesign:Card Margin="5"
            UniformCornerRadius="8"
            Background="{DynamicResource MaterialDesignPaper}"
            materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Background="{StaticResource BackgroundPattern}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Custom Title Bar -->
                <Grid Grid.Row="0"
                    Background="{DynamicResource MaterialDesignPaper}"
                    MouseLeftButtonDown="DragWindow">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Sol Timer"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Margin="15,10,0,10" />

                    <StackPanel Grid.Column="1"
                        Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimizar">
                            <materialDesign:PackIcon Kind="WindowMinimize" Height="20" Width="20" />
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                            Click="LaunchCompactMode_MouseClick"
                            ToolTip="Modo mini">
                            <materialDesign:PackIcon Kind="Resize" Height="20" Width="20" />
                        </Button>
                          <StackPanel
                            Orientation="Horizontal">
                            <Button Style="{StaticResource MaterialDesignIconButton}">
                                <materialDesign:PopupBox PlacementMode="BottomAndAlignCentres"
                                ToolTip="Configuración"
                                Margin="2,0">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Kind="Cog" Height="20" Width="20" Margin="12"
                                        Foreground="{DynamicResource MaterialDesign.Brush.Primary}" />
                                </materialDesign:PopupBox.ToggleContent>
                                <Grid Width="150"
                                    Margin="8,8,8,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="*" />
                                        <ColumnDefinition
                                            Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition
                                            Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="8,8,8,8"
                                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                        Text="Tema"
                                        VerticalAlignment="Bottom" />
                                    <ToggleButton x:Name="ThemeToggle"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                        ToolTip="Cambiar entre tema claro y oscuro"
                                        IsChecked="False"
                                        Margin="8,4"
                                        Checked="ThemeToggle_Checked"
                                        Unchecked="ThemeToggle_Checked">
                                        <ToggleButton.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="WhiteBalanceSunny"
                                                    Margin="0,0,0,0" />
                                            </StackPanel>
                                        </ToggleButton.Content>
                                        <materialDesign:ToggleButtonAssist.OnContent>
                                            <materialDesign:PackIcon
                                                Kind="WeatherNight" />
                                        </materialDesign:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                                </Grid>
                            </materialDesign:PopupBox>
                            </Button>
                        </StackPanel>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                            Click="CloseButton_Click"
                            ToolTip="Cerrar">
                            <materialDesign:PackIcon Kind="Close" Height="20" Width="20" />
                        </Button>
                    </StackPanel>
                </Grid>

                <materialDesign:Card Grid.Row="1"
                    Margin="20,10,20,0"
                    Padding="15,15"
                    materialDesign:ElevationAssist.Elevation="Dp4"
                    UniformCornerRadius="8">
                    <TextBlock x:Name="TimerDisplay"
                        Text="00:00:00"
                        FontSize="48"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Light"
                        MouseDown="TimerDisplay_MouseDoubleClick" />
                </materialDesign:Card>

                <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="5">
                    <Button x:Name="StartPauseButton"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Content="Arrancar"
                        Width="100"
                        Height="35"
                        Margin="5"
                        Click="StartPauseButton_Click" />
                    <Button x:Name="ResetButton"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Content="Resetear"
                        Width="100"
                        Height="35"
                        Margin="5"
                        Click="ResetButton_Click" />
                    <Button x:Name="SaveButton"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Content="Guardar"
                        Width="100"
                        Height="35"
                        Margin="5"
                        Click="SaveButton_Click" />
                </StackPanel>

                <Grid Grid.Row="3" Margin="20,10,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Historial"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Margin="0,0,0,10" />
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Grid.Column="1" Padding="6,3,6,3" Margin="3" Width="50" BorderThickness="0"
                                ToolTip="Tiempo total por día">
                            <materialDesign:PackIcon Kind="ViewList" Height="24" Width="24"/>
                        </Button>
                    </Grid>

                    <materialDesign:Card Grid.Row="1" Padding="8"
                        materialDesign:ElevationAssist.Elevation="Dp4">
                        <ListView x:Name="HistoryListView"
                            Style="{StaticResource MaterialDesignListView}"
                            Extensions:ListViewColumns.Stretch="true"
                            materialDesign:ScrollBarAssist.ButtonsVisibility="Visible">
                            <ListView.Template>
                                <ControlTemplate TargetType="ListView">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <GridViewHeaderRowPresenter Grid.Row="0" 
                                                                  Columns="{Binding View.Columns, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                                    AllowsColumnReorder="False"
                                                                  Margin="0,0,0,0"/>
                                        <ScrollViewer Grid.Row="1" Style="{StaticResource SmoothScrollViewer}">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Grid>
                                </ControlTemplate>
                            </ListView.Template>
                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" 
                                                 Margin="0,5,0,5" 
                                                 Padding="5,0,0,0"
                                                  VerticalAlignment="Center"
                                                  Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                                  Style="{StaticResource MaterialDesignLabelSmallTextBlock}"
                                                       />
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                            <ListView.View>
                                <GridView AllowsColumnReorder="False">
                                    <GridViewColumn Header="Proyecto"
                                        DisplayMemberBinding="{Binding Title}" />
                                    <GridViewColumn Header="Duración"
                                        DisplayMemberBinding="{Binding Duration, StringFormat=hh\\:mm\\:ss}" />
                                    <GridViewColumn Header="Hora"
                                        DisplayMemberBinding="{Binding CreatedAt, StringFormat=HH:mm}" />
                                <GridViewColumn Header="Acciones">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Click="ResumeButton_Click"
                                                        Tag="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        ToolTip="Reanudar"
                                                        Height="20"
                                                        Width="20">
                                                        <materialDesign:PackIcon Kind="Play"
                                                            Height="20"
                                                            Width="20" />
                                                </Button>
                                                    <Button Click="UrlButton_Click"
                                                        Tag="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        ToolTip="Abrir proyecto en la web"
                                                        Height="20"
                                                        Width="20">
                                                        <materialDesign:PackIcon Kind="Link"
                                                            Height="20"
                                                            Width="20" />
                                                </Button>
                                                    <Button Click="DeleteButton_Click"
                                                        Tag="{Binding}"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        ToolTip="Borrar"
                                                        Height="20"
                                                        Width="20">
                                                        <materialDesign:PackIcon Kind="Delete"
                                                            Height="20" Width="20" />
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    </materialDesign:Card>
                </Grid>

                <TextBox x:Name="TextBox_Title"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    HorizontalAlignment="Left"
                    Margin="43,29,0,0"
                    TextWrapping="Wrap"
                    VerticalAlignment="Top"
                    Width="120"
                    Height="50"
                    materialDesign:HintAssist.Hint="# Proyecto" Grid.Row="1" />
            </Grid>
        </materialDesign:Card>
    </materialDesign:DialogHost>
</Window>